PROJETO: Base de dados da empresa Bike Stores Inc com o objetivo de obter métricas relevantes para a equipe de Marketing e Comercial.

# LISTAR TODOS OS CLIENTES QUE NÃO REALIZARAM COMPRAS
SELECT c.customer_id, c.first_name, c.last_name
FROM customer c
LEFT JOIN orders o ON c.customer_id = o.customer_id
WHERE o.orders_id IS NULL;

# LISTAR OS PRODUTOS QUE NÃO SIDO COMPRADOS 
SELECT p.product_id, p.product_name
FROM products p
LEFT JOIN orders_items oi ON p.products_id = oi.product_id
WHERE oi.product_id IS NULL;

# LISTAR OS PRODUTOS SEM ESTOQUE 
SELECT SELECT p.product_id, p.product_name
FROM products p
LEFT JOIN stocks s ON p.products_id = s.product_id
WHERE s.quantity IS NULL OR = 0;

# AGRUPAR QUANTIDADE DE VENDAS DA MARCA POR LOJA
SELECT st.store_id, st.store_name, b.brand_id, b.brand_name, SUM(oi.quantity) AS total_vendas
FROM orders_items oi
JOIN products p ON oi.product_id = p.products_id
JOIN brands b ON p.brand_id = b.brand_id
JOIN orders o ON oi.orders_id = o.orders_id
JOIN stores st ON o.store_id = st.store_id
WHERE b.brand_name = 'NOME_MARCA'
GROUP BY st.store_id, store_name, b.brand_name;

#LISTAR FUNCIONARIOS SEM PEDIDO
SELECT f.staff_id, f.first_name, f.last_name
FROM staff f
LEFT JOIN orders o ON f.staff_id = o.staff_id
WHERE o.orders_id IS NULL;
  


